@page
@model CarritoModel
@{
    ViewData["Title"] = "Carrito";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h2>Productos Seleccionados</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Tipo de Oferta</th>
                        <th>Cantidad</th>
                        <th>Precio Unitario</th>
                        <th>Subtotal</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ItemsCarrito)
                    {
                        <tr>
                            <td>@item.Producto.Nombre</td>
                            <td>@item.Producto.TipoOferta</td>
                            <td>@item.Cantidad</td>
                            <td>@item.Producto.Precio.ToString("C")</td>
                            <td>@((item.Producto.Precio * item.Cantidad).ToString("C"))</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total del Carrito</h5>
                    <p class="card-text">Total: @Model.Total.ToString("C")</p>
                </div>
            </div>
        </div>
    </div>
</div>