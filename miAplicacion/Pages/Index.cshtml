@page
@model IndexModel
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_LayoutLogin";
}

<div class="login-container">
    <div class="login-box">
        <div class="login-header">
            <h2><i class="fas fa-user-circle"></i> Iniciar Sesión</h2>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show">
                <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form method="post" class="login-form">
            <div class="form-group mb-3">
                <label asp-for="Username"><i class="fas fa-user"></i> Usuario</label>
                <input asp-for="Username" class="form-control" required autocomplete="username" />
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password"><i class="fas fa-lock"></i> Contraseña</label>
                <input asp-for="Password" type="password" class="form-control" required autocomplete="current-password" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                </button>
            </div>
        </form>
    </div>
</div>

<style>
    .login-container {
        width: 100%;
        max-width: 400px;
        padding: 20px;
    }

    .login-box {
        background: rgba(255, 255, 255, 0.1);
        padding: 2rem;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.3);
    }

    .login-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .login-header h2 {
        color: #fff;
    }

    .form-group label {
        color: #fff;
    }

    .form-control {
        background: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        color: #fff;
    }

    .form-control:focus {
        background: rgba(255, 255, 255, 0.2);
        color: #fff;
        border-color: #4ba3fc;
        box-shadow: 0 0 0 0.2rem rgba(75, 163, 252, 0.25);
    }

    .btn-primary {
        background: linear-gradient(45deg, #4ba3fc, #3d8fe0);
        border: none;
        padding: 0.75rem;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(75, 163, 252, 0.3);
    }
</style>
