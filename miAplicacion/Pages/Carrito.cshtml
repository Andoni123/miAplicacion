@page
@model CarritoModel
@{
    ViewData["Title"] = "Carrito de Compras";
}

<div class="dashboard-container">
    <div class="dashboard-header">
        <div class="header-content">
            <h2><i class="fas fa-shopping-cart"></i> Carrito de Compras</h2>
        </div>
    </div>

    @if (Model.ItemsCarrito.Any())
    {
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Producto</th>
                        <th>Precio</th>
                        <th>Cantidad</th>
                        <th>Oferta</th>
                        <th>Total</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ItemsCarrito)
                    {
                        <tr class="product-row">
                            <td>@item.Nombre</td>
                            <td>€@item.Precio.ToString("N2")</td>
                            <td>@item.Cantidad</td>
                            <td>
                                <span class="badge">@item.TipoOferta</span>
                            </td>
                            <td>€@item.Total.ToString("N2")</td>
                            <td>
                                <form method="post" asp-page-handler="Eliminar" asp-route-id="@item.Id">
                                    <button type="submit" class="btn btn-danger btn-sm action-btn">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="4" class="text-end fw-bold">Total:</td>
                        <td colspan="2" class="fw-bold">€@Model.Total.ToString("N2")</td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-end mt-4">
            <a href="#" class="btn btn-success">
                <i class="fas fa-check"></i> Proceder al Pago
            </a>
        </div>
    }
    else
    {
        <div class="empty-cart">
            <i class="fas fa-shopping-cart fa-4x"></i>
            <h3>Tu carrito está vacío</h3>
            <p>¡Agrega algunos productos!</p>
            <a asp-page="/GestionProductos" class="btn btn-primary">
                <i class="fas fa-shopping-bag"></i> Ir a Productos
            </a>
        </div>
    }
</div>

<style>
    .empty-cart {
        text-align: center;
        padding: 3rem;
        color: var(--text-color);
    }

    .empty-cart i {
        color: var(--accent-color);
        margin-bottom: 1rem;
    }

    .empty-cart h3 {
        margin-bottom: 0.5rem;
    }

    .empty-cart p {
        margin-bottom: 1.5rem;
        opacity: 0.8;
    }
</style> 