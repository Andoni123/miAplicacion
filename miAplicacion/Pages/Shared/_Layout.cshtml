@using Microsoft.AspNetCore.Http
@using miAplicacion.Extensions
@using miAplicacion.Models
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - miAplicacion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/miAplicacion.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>
    <!-- Navbar moderna y transparente -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <i class="fas fa-store"></i> miTienda
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Index">
                            <i class="fas fa-home"></i> Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/GestionProductos">
                            <i class="fas fa-tags"></i> Productos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/Formulario">
                            <i class="fas fa-envelope"></i> Contacto
                        </a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link position-relative" asp-page="/Carrito">
                            <i class="fas fa-shopping-cart"></i> Carrito
                            @{
                                var itemsCount = Context.Session.GetObject<List<CarritoItem>>("Carrito")?.Count ?? 0;
                                if (itemsCount > 0)
                                {
                                    <span class="cart-badge">@itemsCount</span>
                                }
                            }
                        </a>
                    </li>
                    <li class="nav-item ms-2">
                        <a class="btn btn-outline-light login-btn" asp-page="/Login">
                            <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- Nuevo Footer -->
    <footer class="footer-nuevo">
        <div class="container">
            <div class="footer-grid">
                <!-- Columna 1: Información de la tienda -->
                <div class="footer-seccion">
                    <h4><i class="fas fa-store"></i> miTienda</h4>
                    <p>Tu destino para encontrar los mejores productos al mejor precio.</p>
                    <div class="contacto-info">
                        <p><i class="fas fa-phone"></i> +34 900 123 456</p>
                        <p><i class="fas fa-envelope"></i> info@mitienda.com</p>
                        <p><i class="fas fa-map-marker-alt"></i> Calle Principal 123, Madrid</p>
                    </div>
                </div>

                <!-- Columna 2: Enlaces rápidos -->
                <div class="footer-seccion">
                    <h4>Enlaces Rápidos</h4>
                    <ul>
                        <li><a href="/productos">Catálogo</a></li>
                        <li><a href="/ofertas">Ofertas</a></li>
                        <li><a href="/novedades">Novedades</a></li>
                        <li><a href="/blog">Blog</a></li>
                    </ul>
                </div>

                <!-- Columna 3: Atención al cliente -->
                <div class="footer-seccion">
                    <h4>Atención al Cliente</h4>
                    <ul>
                        <li><a href="/ayuda">Centro de Ayuda</a></li>
                        <li><a href="/devoluciones">Devoluciones</a></li>
                        <li><a href="/envios">Información de Envíos</a></li>
                        <li><a href="/faq">Preguntas Frecuentes</a></li>
                    </ul>
                </div>

                <!-- Columna 4: Newsletter -->
                <div class="footer-seccion">
                    <h4>¡Mantente Informado!</h4>
                    <p>Suscríbete a nuestro newsletter para recibir ofertas exclusivas</p>
                    <div class="newsletter-form">
                        <input type="email" placeholder="Tu correo electrónico">
                        <button type="submit"><i class="fas fa-paper-plane"></i></button>
                    </div>
                    <div class="redes-sociales">
                        <a href="#" class="red-social"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="red-social"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="red-social"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="red-social"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
            </div>

            <div class="footer-bottom">
                <div class="footer-derechos">
                    <p>&copy; @DateTime.Now.Year miTienda - Todos los derechos reservados</p>
                </div>
                <div class="footer-legal">
                    <a href="/privacidad">Política de Privacidad</a>
                    <a href="/terminos">Términos y Condiciones</a>
                    <a href="/cookies">Política de Cookies</a>
                </div>
                <div class="footer-pagos">
                    <i class="fab fa-cc-visa"></i>
                    <i class="fab fa-cc-mastercard"></i>
                    <i class="fab fa-cc-paypal"></i>
                    <i class="fab fa-cc-apple-pay"></i>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>

<style>
    /* Estilos generales */
    body {
        background: linear-gradient(135deg, #1a1a1a 0%, #2c3e50 100%);
        color: #FFF8DC;
        min-height: 100vh;
        padding-top: 76px;
        display: flex;
        flex-direction: column;
    }

    main {
        flex: 1 0 auto;
    }

    /* Navbar */
    .navbar {
        background: rgba(43, 62, 80, 0.95);
        backdrop-filter: blur(10px);
        transition: all 0.3s ease;
    }

    .navbar.scrolled {
        background: #2c3e50;
    }

    .navbar-brand {
        font-size: 1.5rem;
        font-weight: 600;
    }

    .nav-link {
        position: relative;
        padding: 0.5rem 1rem;
        margin: 0 0.2rem;
        transition: all 0.3s ease;
    }

    .nav-link::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 50%;
        width: 0;
        height: 2px;
        background: #DAA520;
        transition: all 0.3s ease;
        transform: translateX(-50%);
    }

    .nav-link:hover::after {
        width: 100%;
    }

    /* Cart badge */
    .cart-badge {
        position: absolute;
        top: -5px;
        right: -5px;
        background: #DAA520;
        color: white;
        border-radius: 50%;
        padding: 0.25rem 0.5rem;
        font-size: 0.75rem;
    }

    /* Nuevo Footer */
    .footer-nuevo {
        background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
        color: #fff;
        padding: 4rem 0 1rem;
        margin-top: auto;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;
        margin-bottom: 3rem;
    }

    .footer-seccion h4 {
        color: #DAA520;
        margin-bottom: 1.5rem;
        font-size: 1.2rem;
        font-weight: 600;
    }

    .footer-seccion ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-seccion ul li {
        margin-bottom: 0.8rem;
    }

    .footer-seccion ul li a {
        color: #fff;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
    }

    .footer-seccion ul li a:hover {
        color: #DAA520;
        transform: translateX(5px);
    }

    .contacto-info p {
        margin-bottom: 0.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .newsletter-form {
        display: flex;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .newsletter-form input {
        flex: 1;
        padding: 0.8rem;
        border: none;
        border-radius: 4px;
        background: rgba(255, 255, 255, 0.1);
        color: #fff;
    }

    .newsletter-form button {
        padding: 0.8rem 1.2rem;
        border: none;
        border-radius: 4px;
        background: #DAA520;
        color: white;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .newsletter-form button:hover {
        background: #CD853F;
        transform: translateY(-2px);
    }

    .redes-sociales {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;

    }
.redes-sociales i {
    color: rgba(255, 255, 255, 0.8) !important;
    font-size: 1.3rem;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    padding: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    width: 2.5rem;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
}

.redes-sociales i:hover {
    color: #2c3e50 !important;
    background: #DAA520;
    transform: translateY(-3px) scale(1.1);
    box-shadow: 0 5px 15px rgba(218, 165, 32, 0.4);
}
 

    .footer-bottom {
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1rem;
        text-align: center;
    }

    .footer-legal {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    .footer-legal a {
        color: #fff;
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s ease;
    }

    .footer-legal a:hover {
        color: #DAA520;
    }

    .footer-pagos {
        display: flex;
        justify-content: center;
        gap: 1rem;
        font-size: 1.5rem;
    }

    .footer-pagos i {
        color: rgba(255, 255, 255, 0.8);
        transition: all 0.3s ease;
    }

    .footer-pagos i:hover {
        color: #DAA520;
        transform: translateY(-2px);
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .footer-grid {
            grid-template-columns: 1fr;
            text-align: center;
        }

        .contacto-info p {
            justify-content: center;
        }

        .redes-sociales {
            justify-content: center;
        }

        .footer-bottom {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .footer-legal {
            flex-direction: column;
            gap: 0.5rem;
        }
    }

    .login-btn:hover {
        background: var(--accent-color);
        color: #fff !important;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(218, 165, 32, 0.3);
    }

    .register-btn {
        border: 2px solid #4ba3fc;
        color: #4ba3fc;
        padding: 0.5rem 1.2rem;
        border-radius: 20px;
        transition: all 0.3s ease;
        font-weight: 500;
        background: rgba(75, 163, 252, 0.1);
    }

    .register-btn:hover {
        background: #4ba3fc;
        color: #fff !important;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(75, 163, 252, 0.3);
    }

    .register-btn i {
        margin-right: 0.5rem;
    }
</style>

<script>
    // Cambiar navbar al hacer scroll
    window.addEventListener('scroll', function () {
        if (window.scrollY > 50) {
            document.querySelector('.navbar').classList.add('scrolled');
        } else {
            document.querySelector('.navbar').classList.remove('scrolled');
        }
    });
</script>