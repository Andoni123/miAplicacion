@page
@model miAplicacion.Pages.LoginPageModel
@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="login-container">
    <div class="login-box">
        <div class="login-header">
            <h2><i class="fas fa-user-circle"></i> Iniciar Sesión</h2>
        </div>
        <form method="post" class="login-form">
            <div class="form-floating mb-3">
                <input asp-for="Email" type="email" class="form-control" placeholder="nombre@ejemplo.com" required />
                <label asp-for="Email">Correo electrónico</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Contraseña" required />
                <label asp-for="Password">Contraseña</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="RecordarMe" type="checkbox" class="form-check-input" />
                <label asp-for="RecordarMe" class="form-check-label">Recordarme</label>
            </div>

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary btn-login">
                    <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
                </button>
            </div>

            <div class="login-footer mt-3">
                <span>¿No tienes una cuenta?</span>
                <a href="/Registro" class="create-account">Crear cuenta</a>
            </div>
        </form>
    </div>
</div>

<style>
    :root {
    --primary-color: #8B4513;
    --secondary-color: #A0522D;
    --accent-color: #DAA520;
    --text-color: #FFF8DC;
    --background-color: #2F1810;
    --container-color: #3B2417;
    --success-color: #9CB071;
    --warning-color: #D4AC0D;
    --hover-color: rgba(218, 165, 32, 0.1);
}

/* Estilos del Login actualizados */
.login-container {
    min-height: calc(100vh - 180px);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
    background: linear-gradient(135deg, #1a1a1a 0%, #2c3e50 100%);
    margin-top: -76px;
    padding-top: calc(76px + 2rem);
    padding-bottom: 2rem;
    position: relative;
    overflow-y: auto;
    margin-bottom: 4rem;
}

.login-box {
    background: rgba(43, 62, 80, 0.95);
    padding: 2.5rem;
    border-radius: 15px;
    width: 100%;
    max-width: 450px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    border: 1px solid rgba(75, 163, 252, 0.2);
    backdrop-filter: blur(10px);
    margin: auto;
}

.login-header {
    text-align: center;
    margin-bottom: 2rem;
    position: relative;
}

.login-header h2 {
    color: #FFF;
    font-size: 1.75rem;
    margin-bottom: 1rem;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.login-header h2 i {
    font-size: 1.75rem;
    color: #4ba3fc;
}

.login-form {
    width: 100%;
    margin: 0 auto;
}

.form-floating {
    margin-bottom: 1rem;
}

.form-floating > input {
    background: rgba(28, 41, 56, 0.8) !important;
    border: 1px solid rgba(75, 163, 252, 0.3) !important;
    color: #fff !important;
    font-size: 0.95rem;
    height: 3.25rem;
    padding: 0.75rem;
}

.form-floating > label {
    color: rgba(255, 255, 255, 0.7) !important;
    font-size: 0.95rem;
    padding: 0.75rem;
    height: 3.25rem;
    display: flex;
    align-items: center;
}

.btn-login {
    width: 100%;
    padding: 0.75rem;
    margin-top: 0.5rem;
    background: linear-gradient(45deg, #4ba3fc, #3d8fe0);
    color: #fff;
    border: none;
    font-weight: 600;
    font-size: 1rem;
    border-radius: 8px;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.form-check {
    display: flex;
    align-items: center;
    margin: 1rem 0;
}

.form-check-input {
    margin-right: 0.5rem;
}

.login-footer {
    margin-top: 1.5rem;
    text-align: center;
    padding-top: 1rem;
    border-top: 1px solid rgba(75, 163, 252, 0.1);
}

.login-footer a {
    color: #4ba3fc;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    margin: 0 0.25rem;
}

.login-footer a:hover {
    color: #3d8fe0;
    text-shadow: 0 0 8px rgba(75, 163, 252, 0.3);
}

.divider {
    margin: 0 0.8rem;
    color: rgba(255, 255, 255, 0.3);
}

.login-btn {
    border: 2px solid var(--accent-color);
    color: var(--accent-color);
    padding: 0.5rem 1.2rem;
    border-radius: 20px;
    transition: all 0.3s ease;
    font-weight: 500;
    background: rgba(218, 165, 32, 0.1);
}

.login-btn:hover {
    background: var(--accent-color);
    color: #fff !important;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(218, 165, 32, 0.3);
}

.login-btn i {
    margin-right: 0.5rem;
}

/* Footer styles */
.footer {
    position: relative;
    background: linear-gradient(to right, #2c3e50, #3498db);
    color: #FFF8DC;
    padding: 4rem 0 1rem;
    width: 100%;
    bottom: 0;
}

/* Ajuste para dispositivos móviles */
@@media (max-width: 768px) {
    .login-container {
        min-height: calc(100vh - 160px);
        padding: 1rem;
        padding-top: calc(76px + 1rem);
        margin-bottom: 1rem;
    }

    .login-box {
        padding: 1.5rem;
        margin: 0.5rem auto;
        max-width: 100%;
    }

    .login-header h2 {
        font-size: 1.5rem;
    }

    .login-header h2 i {
        font-size: 1.5rem;
    }

    .form-floating > input,
    .form-floating > label {
        font-size: 0.9rem;
    }

    .btn-login {
        padding: 0.75rem;
        font-size: 0.95rem;
    }

    .login-footer {
        margin-top: 1rem;
        padding-top: 1rem;
    }

    .login-footer a {
        font-size: 0.9rem;
        margin: 0 0.25rem;
    }
}

/* Ajustes para pantallas muy pequeñas */
@@media (max-width: 360px) {
    .login-box {
        padding: 1rem;
    }

    .login-header h2 {
        font-size: 1.25rem;
    }

    .login-header h2 i {
        font-size: 1.25rem;
    }

    .form-floating > input,
    .form-floating > label {
        font-size: 0.85rem;
    }
}

/* Ajustes para pantallas altas */
@@media (min-height: 800px) {
    .login-container {
        align-items: center;
    }
}

/* Ajustes para pantallas bajas */
@@media (max-height: 600px) {
    .login-container {
        align-items: flex-start;
    }
    
    .login-box {
        margin: 1rem auto;
    }
}

/* Mensaje de error */
.text-danger {
    color: #ff6b6b !important;
    font-size: 0.85rem;
    margin-top: 0.3rem;
}
</style>
